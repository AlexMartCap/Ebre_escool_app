<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="5dp">


    <TextView
        android:id="@+id/carddemo_mayknow_main_inner_title"

        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <!--
        <TextView
            android:id="@+id/carddemo_mayknow_main_inner_subtitle"
            style="@style/carddemo_mayknow_main_inner_title.sub"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/carddemo_mayknow_main_inner_title"
            android:layout_marginBottom="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">

    </LinearLayout>

    <TextView
        android:id="@+id/carddemo_mayknow_main_inner_button"
        style="@style/carddemo_mayknow_main_inner_title"
        android:layout_width="48dp"
        android:layout_height="32dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/carddemo_mayknow_add"
        android:gravity="center"
        android:text="@string/editPerson"
        android:textColor="#FFF"
        android:textSize="14sp"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>